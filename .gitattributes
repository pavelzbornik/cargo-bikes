# Set default behavior to automatically normalize line endings for text files
* text=auto

# Force LF for common text file types
*.md     text eol=lf
*.py     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.json   text eol=lf
*.html   text eol=lf
*.css    text eol=lf
*.js     text eol=lf
*.ts     text eol=lf
*.sh     text eol=lf
*.txt    text eol=lf

# Treat image and binary files as binary
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.zip    binary

# Ensure .gitattributes itself uses LF in the repository
.gitattributes text eol=lf
